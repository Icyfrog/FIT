                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="脂肪：" />

                    <TextView
                        android:id="@+id/refer_fat"
                        android:layout_width="wrap_content"
